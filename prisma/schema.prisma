// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String     @id @unique
  name         String
  lastname     String
  role         Roles      @relation(references: [id], fields: [rolesId])
  created_at   DateTime   @default(now())
  auth_session Session[]
  key          Key[]
  rolesId      Int
  Companies    Companies? @relation(fields: [companiesId], references: [id])
  companiesId  Int?
}

model Roles {
  id   Int    @id @default(autoincrement())
  name String
  User User[]
}

model Session {
  id             String @id @unique
  user_id        String
  active_expires BigInt
  idle_expires   BigInt
  user           User   @relation(references: [id], fields: [user_id], onDelete: Cascade)

  @@index([user_id])
}

model Key {
  id              String  @id @unique
  hashed_password String?
  user_id         String
  user            User    @relation(references: [id], fields: [user_id], onDelete: Cascade)

  @@index([user_id])
}

model Reports {
  id          Int        @id @default(autoincrement())
  idAzienda   Int
  createdBy   Int
  EditedBy    Int
  created_at  DateTime   @default(now())
  updated_at  DateTime   @default(now())
  Description String
  Companies   Companies? @relation(fields: [companiesId], references: [id])
  companiesId Int?
}

model Companies {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  created_at  DateTime  @default(now())
  Reports     Reports[]
  Users       User[]
}

model Products {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Float
  available   Boolean
  created_at  DateTime @default(now())

  Images Images[]
}

model Images {
  id         Int       @id @default(autoincrement())
  name       String
  image      String
  created_at DateTime  @default(now())
  Products   Products? @relation(fields: [productsId], references: [id])
  productsId Int?
}
